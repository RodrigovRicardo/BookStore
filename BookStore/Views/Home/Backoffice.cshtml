@model List<Book>
@{
    ViewData["Title"] = "Backoffice";
}
<div class="d-grid gap-2">
    <a asp-area="" asp-controller="Bc" asp-action="Create"><button type="button" class="btn btn-outline-secondary">Create</button></a>
</div>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Title</th>
                <th>Synopsis</th>
                <th>Language</th>
                <th>Publisher</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td><img src="@item.Image" width="100" height="150"/></td>
                        <td>@item.Title</td>
                        <td>@item.Synopsis</td>
                        <td>@item.Language</td>
                        <td>@item.Publisher</td>
                        <td>@item.ISBN</td>
                        <td>@item.Price</td>
                        <td>
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-primary">Edit</button></a>
                            <a asp-controller="Bc" asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-primary">Details</button></a>
                            <a asp-controller="Bc" asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-danger">Delete</button></a>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>