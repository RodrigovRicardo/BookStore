@model List<Book>
@{
    ViewData["Title"] = "Backoffice";
}

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Title</th>
                <th>Publisher</th>
                <th>Price</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td><img src="@item.ImageUrl" width="100" height="150"/></td>
                        <td>@item.Title</td>
                        <td>@item.Publisher</td>
                        <td>@item.Price</td>
                        <td>
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>