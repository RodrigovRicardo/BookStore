@model List<BookStore.Models.Book>
@{
}

<h2 class="text-center mb-5">Back Office</h2>

<div class="row mb-5">
	<div class="col">
		<a asp-action="btn btn-primary" asp-controller="Book" asp-action="Create">New Product</a>
	</div>
	<div class="col">
	</div>
</div>



<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Author</th>
			<th>Price</th>
			<th>Options</th>
			<th>Image</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null && Model.Any())
		{
			foreach (var book in Model)
			{
				<tr>
					<td>@book.Id</td>
					<td>@book.Title</td>
					<td>@book.Author</td>
					<td>@book.Price</td>
					<td>@book.Language</td>
					<td><img src="/imagensLivro/A_psicologia_do_dinheiro.jpg"></img>@book.Image</td>
					<td>
						<a asp-action="Edit" asp-controller="Book" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>
						<a asp-action="Delete" asp-controller="Book" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td colspan="5">No books available</td>
			</tr>
		}
	</tbody>
</table>